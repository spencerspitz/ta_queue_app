  <head>
    <h1>TA Tool</h1>
  </head>
  
  <body>
    <div class="allRequests">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr class="">
            <th>Name</th>
            <th>Class</th>
            <th>HW/Lab/General</th>
            <th>Time Submitted</th>
          </tr>
        </thead>
        <tbody>
          <% @requests.each do |r| %>
            <tr class="request">
              <td class="requestname">
                <%= r.name %>
              </td>
              <td class="requestclass">
                <%= r.compsciclass %>
              </td>
              <td class="requestqtype">
                <%= r.qtype %>
              </td>
              <td class="requesttime">
                <%= link_to "Show View", request_path(r) %> 
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

 
  
    <div class="row">
      <div class="col-md">
        <%= link_to "Create new request", new_request_path, :class => "btn btn-primary" %>
      </div>
    </div>
  </body>