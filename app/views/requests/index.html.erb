  <div class="row">
    <div class="col-md">
      <h3>TA Tool</h3>
    </div>
  </div>
  <table class="table">
    <thead class="thead-light">
      <tr class="products_header">
        <th>Name</th>
        <th>Class</th>
        <th>HW/Lab/General</th>
        <th>Time Submitted</th>
      </tr>
    </thead>
    <tbody>
      <% @requests.each do |r| %>
        <tr class="request">
          <td class="requestname">
            <%= r.name %>
          </td>
          <td class="requestclass">
            <%= r.compsciclass %>
          </td>
          <td class="requestqtype">
            <%= r.qtype %>
          </td>
          <td class="requesttime">
            <%= link_to "Show View", request_path(r) %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-md">
        <%= link_to "Create new request", new_request_path, :class => "btn btn-primary" %>
    </div>
  </div>

