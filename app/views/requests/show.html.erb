  <div class="row">
    <div class="col-md -1">
      <h4 class="requestname">
        <%= "Request details for #{@request.name}" %>
      </h4>
    </div>
  </div>
  <table class="table">
    <thead class="thead-light">
      <tr class="requests_header">
        <th>Class</th>
        <th>Type</th>
        <th>Description</th>
        <th>Email</th>
        <th>Link for Zoom Meeting</th>
      </tr>
    </thead>
    <tbody>
      <tr class="request">
        <td class="reqtd">
          <%= @request.compsciclass %>
        </td>
        <td class="reqtd">
          <%= @request.qtype %>
        </td>
        <td class="reqtd">
          <%= @request.desc %>
        </td>
        <td class="reqtd">
          <%= @request.email %>
        </td>
        <td id="productLink">
          <% if @request.zoomurl.nil? %>
            Please wait for help!
          <% else %>  
            <%= link_to "#{@request.zoomurl}", @request.zoomurl, :target => "_blank" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  
  <% if current_user.tutor? %> 
    <%= form_with model: @request, :method => :patch, local: true do |r|%>
      <div class="row">
        <div class="col-md-3">
          <%= r.label "Zoom Meeting URL" %>
        </div>
        <div class="col-md-4">
          <%= r.text_field :zoomurl %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= r.submit "Edit request" %>
        </div>
      </div>
    <% end %>
  <% end %>
  <br/>
  <%= link_to("Back to request list", requests_path, :class => "btn") %>
  
  <%= link_to "Delete request", request_path(@request), method: :delete, class: "btn"%>

