<head>
    <h1>Quick Questions</h1>
</head>

<body>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Topic</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            <% @stacks.each do |s| %>
            <tr>
                <td>
                    <%= s.user %>
                </td>
                <td>
                    <%= s.coscclass %>
                </td>
                <td>
                    <%= s.topic %>
                </td>
                <td>
                    <%= link_to "#{s.comment}".truncate_words(10), stack_path(s) %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    
    <div>
        <%= link_to "Back", requests_path, :class => "btn btn-primary" %>
    </div>
</body>