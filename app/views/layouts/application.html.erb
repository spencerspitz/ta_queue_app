<!DOCTYPE html>
<html>
  <head>
    <title>TaQueueApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap' %>
  </head>

  <body>
    <div id="header">
      <image id="headerImg" src="/images/colgateLogo.png"></image>
      <div id="auth">
        <% if !user_signed_in? %>
          <span>Sign In with Google:</span>
          <div class="btn-primary" id="googleLogoBtn">
            <%= link_to image_tag("/images/googleLogo.png", :id => "googleLogo"), user_google_oauth2_omniauth_authorize_path, :method => :post %>
          </div>
        <% else %>
        <!--User signed in-->
          <%= "Hi, #{current_user.email}" %>
          <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => "btn btn light" %>
        <% end %>
      </div>
    </div>
    
    <%= yield %>
  </body>
</html>
